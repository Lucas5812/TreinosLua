print("Bom dia/tarde/noite, poderia me dizer seu nome?")
nome = io.read("*line")

print("seu nome é ".. nome.. ("?"))

if(nome == "Lucas") then
    print("esquizofrênico")
elseif(nome == "João") or (nome == "jp") then
    print("Ola Juan Pablo")
elseif(nome == "Marco") then
    print("Me liberte, fornecedor")
elseif(nome == "Careca") then
    print("Você não vai me prender para sempre, Tremba")
    else
        print("Ola")
end
